.building-uploader {
  position: relative;
  width: 100%;
  padding-bottom: 66.666%;
  border: 1px solid #dcdfe6;
  border-radius: 5px;
  overflow: hidden;

  .el-upload {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;

    img {
      width: 100%;
      height: 100%;
    }

    i {
      color: #dcdfe6;
      font-size: 30px;
    }
  }
}